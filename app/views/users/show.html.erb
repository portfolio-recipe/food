<%= render 'users/header' ,user:@user %>

<div class="container">
  <div> <h1>マイページ</h1></div>
    <div class="row">
      <div class="col-xs-12">
        <div align="center">
          <div>
            <%= attachment_image_tag @user, :image, :fill,100,100, format: 'jpeg', size: "200x200", fallback: "no_image.png" %>
          </div>
        <div>
      <div> <%= @user.name %> </div>
      <div> <%=@user.email %> </div>
	     <%= link_to "編集",edit_user_path(@user.id), class: "btn btn-success edit_btn" %>
		     <%= link_to "退会", user_registration_path,method: :delete, class: "btn btn-danger delete_btn" %>
         </div>
       </div>
     </div>
   </div>
</div>
<div align="center"><h4>投稿一覧  ↓</h4></div>
<div class="flex">
  

      <% @recipes.each do |recipe| %>
              <div class="flex-container"><div><%= link_to recipe_path(recipe) do %>
                <%= attachment_image_tag recipe, :recipe_image, :fill,300,300,format: 'jpg', size: "300x300",fallback:"no_image.png" %>
              <% end %></div>
                    <h4><%= recipe.title %></h4>
              </div>
        <% end %>
        </div>
          <div style="text-align: center;"><%= paginate @recipes %></div>
      </div>
   </div>
 </div>
