<%= render 'users/header' ,user:@user %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>レシピ詳細ページ</h3>

        <%= attachment_image_tag @recipe, :recipe_image, :fill,100,100,format: 'jpg', size: "320x280",fallback:"no_image.png" %>
        <%= @recipe.title %>
        <%#= @recipe_items.seasoning %>
        <%= link_to "編集", edit_recipe_path(@recipe) %>
        <%= link_to "削除", recipe_path(@recipe), method: :delete %>

         <% if @recipe.favorited_by?(current_user) %>
           <li>
             <%= link_to  recipe_favorite_path(@recipe), method: :delete do %>
               <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
               <%= @recipe.favorites.count %> お気に入り
             <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to  recipe_favorites_path(@recipe), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @recipe.favorites.count %> お気に入り
            <% end %>
          </li>
      <% end %>
    </div>
  </div>
</div>