<%= render 'users/header' ,user:@user %>
  <div class="container">
    <div class="row">
         <ul class="nav nav-tabs nav-justified">
           <li role="presentation"><a href="/">新着</a></li>
           <li role="presentation"><a href="/recipes">ランキング</a></li>
          </ul>
<div class="flex">
  

      <% @recipes.each do |recipe| %>
              <div class="flex-container"><div><%= link_to recipe_path(recipe) do %>
                <%= attachment_image_tag recipe, :recipe_image, :fill,300,300,format: 'jpg', size: "300x300",fallback:"no_image.png" %>
              <% end %></div>
                    <h4><%= recipe.title %></h4>
              </div>
        <% end %>
        </div>
          <div style="text-align: center;"><%= paginate @recipes %></div>
      </div>
   </div>
 </div>

<%= render 'users/footer' ,user:@user %>